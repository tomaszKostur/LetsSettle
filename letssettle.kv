<ProductList>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    ScrollView:
        BoxLayout:
            id: products
            height: self.minimum_height
            size_hint_y: None
            spacing: 10
            orientation: 'vertical'

    Button:
        id: rm_prod_btn
        text: 'Remove Product'
        size_hint: (1, None)
        height: 100
        on_press: root.prod_list.pop()

    Button:
        id: add_prod_btn
        text: 'Add Product'
        size_hint: (1, None)
        height: 100
        on_press: root.prod_list.append("Product")

<MateWidget>:
    CheckBox
    TextInput:
        id: cost_w
        text: str(root.mate_cost)
        on_text: root.update_cost_p()
    TextInput:
        id: name_w
        text: root.mate_name
        on_text: root.update_name_p()


<ProductView>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    TextInput:
        id: prodname
        size_hint: (1, None)
        height: 100
        text: root.prod_name
        on_text: root.update_prodname()
    BoxLayout:
        size_hint: (1, None)
        height: 100
        Label:
            text: 'Total cost'
        Label:
            text: root.total_cost
    BoxLayout:
        size_hint: (1, None)
        height: 100
        Label:
            text: 'Used'
        Label:
            text: 'Cost'
        Label:
            text: 'Mate name'
    ScrollView:
        BoxLayout:
            id: mates_list
            size_hint_y: None
            orientation: 'vertical'
            height: self.minimum_height

    Button:
        id: rm_mate
        text: "Remove Mate"
        size_hint: (1, None)
        height: 100

        on_press: root.people.pop()

    Button:
        id: add_mate
        text: "Add Mate"
        size_hint: (1, None)
        height: 100

        on_press: root.people.append(["Mate", 0])

<MainView>:
    orientation: 'horizontal'
    ProductList:
        id: prodlist
        size_hint: (0.5, 1)
        on_last_selected: root.redraw_prodview()
    ProductView:
        id: prodview
        on_prod_name: root.update_prodlist()
