<ProductList>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    ScrollView:
        BoxLayout:
            id: products
            size_hint_y: None
            height: self.minimum_height
            spacing: 10
            orientation: 'vertical'

    Button:
        id: rm_prod_btn
        text: 'Remove Product'
        size_hint: (1, None)
        height: 100

    Button:
        id: add_prod_btn
        text: 'Add Product'
        size_hint: (1, None)
        height: 100

<PersonView>:
    orientation: 'horizontal'
    size_hint: (1, None)
    CheckBox:
        id: used
        size_hint: (1, None)
        active: True
    TextInput:
        id: ammount
        multiline: False
        font_size: self.height/2
        padding_y: self.height/4
        background_active: "./img1.png"
        background_normal: "./img2.png"
        size_hint: (1, None)
        text: str(root.cost)
    TextInput:
        id: name
        multiline: False
        font_size: self.height/2
        padding_y: self.height/4
        background_active: "./img1.png"
        background_normal: "./img2.png"
        size_hint: (1, None)
        text: root.name

<PersonTitleBar>:
    orientation: 'horizontal'
    size_hint: (1, None)
    Label:
        size_hint: (1, None)
        text: 'Used'
    Label:
        size_hint: (1, None)
        text: 'Paid'
    Label:
        size_hint: (1, None)
        text: 'Name'

<ProductView>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    TextInput:
        id: product_name
        multiline: False
        font_size: self.height/2
        padding_y: self.height/4
        background_active: "./img1.png"
        background_normal: "./img2.png"
        text: 'Product'
        size_hint: (1, None)
        height: 100
    BoxLayout:
        size_hint: (1, None)
        height: 100
        Label:
            text: 'Total cost:'
        Label:
            text: '0'
    PersonTitleBar
    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            id: people
            size_hint: (1, None)
            height: self.minimum_height

    Button:
        id: rm_person_btn
        text: 'Remove Person'
        size_hint: (1, None)
        height: 100
        on_press: print(root.parent.products)

    Button:
        id: add_person_btn
        text: 'Add Person'
        size_hint: (1, None)
        height: 100


<MainView>:
    id: main_view
    orientation: 'horizontal'
    ProductList
        size_hint: (.25, 1)
        id: product_list
    ProductView
        id: product_view
