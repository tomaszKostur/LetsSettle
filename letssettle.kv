<ProductList>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    ScrollView:
        BoxLayout:
            id: products
            size_hint_y: None
            height: self.minimum_height
            spacing: 10
            orientation: 'vertical'

    Button:
        id: rm_prod_btn
        text: 'Remove Product'
        size_hint: (1, None)
        height: 100

    Button:
        id: add_prod_btn
        text: 'Add Product'
        size_hint: (1, None)
        height: 100

<PersonView>:
    orientation: 'horizontal'
    size_hint: (1, None)
    CheckBox:
        size_hint: (1, None)
        active: True
    TextInput:
        size_hint: (1, None)
    Label:
        size_hint: (1, None)
        text: root.name

<PersonTitleBar>:
    orientation: 'horizontal'
    size_hint: (1, None)
    Label:
        size_hint: (1, None)
        text: 'Used'
    Label:
        size_hint: (1, None)
        text: 'Paid'
    Label:
        size_hint: (1, None)
        text: 'Name'

<ProductView>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    Label:
        id: product_name
        text: 'Product'
        size_hint: (1, None)
        height: 100
    BoxLayout:
        size_hint: (1, None)
        height: 100
        Label:
            text: 'Total cost:'
        Label:
            text: '123 cost here'
    PersonTitleBar
    ScrollView:
#        size_hint: (1, None)
#        height: 400
        BoxLayout:
            orientation: 'vertical'
            id: people
            size_hint: (1, None)
            height: self.minimum_height

#            PersonView
#            PersonView


    Button:
        id: add_person_btn
        text: 'Add Person'
        size_hint: (1, None)
        height: 100
#        on_press: root.add_person()


<MainView>:
    orientation: 'horizontal'
    ProductList
        id: product_list
    ProductView
        id: product_view
